<!-- Flexbox wrapper for the whole page content -->
<div class="page-wrapper">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <!-- Flexbox wrapper for the form -->
  <div class="form-wrapper">
    <div class="form-inputs">
      <%= f.input :first_name, autofocus: true, required: true, placeholder: "First Name" %>
      <%= f.input :last_name, autofocus: true, required: true, placeholder: "Last Name" %>
      <%= f.input :email, required: true, autofocus: true, placeholder: "example@gmail.com" %>
      <%= f.input :password, required: true, placeholder: "*" * 6, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true, placeholder: "*" * 6 %>

<!-- Inside Form to get the same size as input fields (buttons with the links) -->
      <div class="button-column">
      <!-- Sign up Button-->
          <%= f.button :submit, "Sign up", class: "btn btn-danger btn-block" %>
          <%= render "devise/shared/fblink"%>
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
