<!-- Flexbox wrapper for the whole page content -->
<div class="page-wrapper">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <!-- Flexbox wrapper for the form -->
  <div class="form-wrapper">
    <div class="form-inputs">

      <%= f.input :email, required: false, autofocus: true, placeholder: "username" %>
      <%= f.input :password, required: false, placeholder: "*" * 6 %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <!-- Inside Form to get the same size as input fields (buttons with the links) -->
      <div class="button-column">
        <!-- log in Button-->
        <%= f.button :submit, "Log in", class: "btn btn-danger btn-block" %>
        <%= render "devise/shared/fblink"%>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>

  </div>
</div>
